{
  "name": "mcp-manager",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev-unified.mjs",
    "dev:legacy": "node scripts/dev.mjs",
    "dev:electron": "node scripts/dev-unified.mjs --electron",
    "dev:backend": "node scripts/dev-unified.mjs --daemon-only",
    "dev:frontend": "node scripts/dev-unified.mjs --vite-only",
    "build": "node scripts/build.mjs",
    "build:backend": "node scripts/build.mjs --backend-only",
    "build:frontend": "node scripts/build.mjs --frontend-only",
    "build:quick": "node scripts/build.mjs --no-clean",
    "build:prod": "node scripts/build.mjs --production",
    "package": "node scripts/build.mjs --electron",
    "package:mac": "node scripts/build.mjs --mac",
    "package:win": "node scripts/build.mjs --win",
    "package:linux": "node scripts/build.mjs --linux",
    "package:all": "npm run package:mac && npm run package:win && npm run package:linux",
    "setup": "npm install --workspaces --include-workspace-root",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd services/manager && go test -v ./...",
    "test:frontend": "cd apps/desktop && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd services/manager && go vet ./...",
    "lint:frontend": "biome check .",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd services/manager && go fmt ./...",
    "format:frontend": "biome format --write .",
    "clean": "rm -rf build dist services/manager/bin apps/desktop/dist",
    "make": "make",
    "make:help": "make help"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0"
  }
}
